<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss}[%thread][%X{X-Alpha-Trace}][%level]%logger{20}:: %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="io.micronaut.http.client" level="TRACE"/>
    <logger name="org.apache.kafka.clients.NetworkClient" level="ERROR"/>
    <logger name="io.micronaut.retry.intercept.RecoveryInterceptor" level="OFF"/>
    <logger name="io.micronaut.kubernetes" level="DEBUG"/>
    <logger name="io.micronaut.security" level="INFO"/>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
<!--    <logger name="curl" level="DEBUG">-->
<!--        <appender-ref ref="STDOUT"/>-->
<!--    </logger>-->
</configuration>
